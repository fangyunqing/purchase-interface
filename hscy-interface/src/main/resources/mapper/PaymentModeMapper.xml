<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hf.project.common.mapper.datadict.PaymentModeMapper">

    <select id="query" parameterType="java.lang.String" resultMap="PaymentModeMap">
        SELECT
        TOP 1
        iID,
        sPaymentCode,
        sPaymentName,
        sNCPayment
        FROM dbo.poPayment WITH(NOLOCK)
        WHERE sNCPayment = #{NCCode}
    </select>

    <resultMap id="PaymentModeMap" type="BaseData">
        <id column="iId" jdbcType="VARCHAR" property="id"/>
        <result column="sPaymentCode" jdbcType="VARCHAR" property="code"/>
        <result column="sPaymentName" jdbcType="VARCHAR" property="name" />
        <result column="sNCPayment" jdbcType="VARCHAR" property="NCCode" />
    </resultMap>

    <insert id="insert" parameterType="BaseData">
        INSERT INTO dbo.poPayment
        (iId,sPaymentCode,sPaymentName,sNCPayment,bUsable,sCreator,dCreateDate)
        VALUES(#{id},#{code},#{name},#{NCCode},1,'admin',GETDATE())
    </insert>
</mapper>
