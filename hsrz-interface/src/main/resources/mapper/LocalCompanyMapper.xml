<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hf.project.dye.mapper.LocalCompanyMapper">

    <select id="query" parameterType="java.lang.String" resultMap="CompanyMap">
        SELECT
        TOP 1
        iCompanyID,
        sCompanyName,
        sCNCompanyFullName
        FROM dbo.smLocalCompany WITH(NOLOCK)
        WHERE sCompanyName = #{companyName} OR sCNCompanyFullName  = #{companyName}
    </select>

    <resultMap id="CompanyMap" type="LocalCompany">
        <result column="iCompanyID" jdbcType="INTEGER" property="companyID" />
        <result column="sCompanyName" jdbcType="VARCHAR" property="companyName" />
        <result column="sCNCompanyFullName" jdbcType="VARCHAR" property="companyFullName" />
    </resultMap>

</mapper>
