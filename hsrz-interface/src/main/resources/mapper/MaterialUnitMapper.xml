<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hf.project.common.mapper.datadict.MaterialUnitMapper">

    <select id="query" parameterType="java.lang.String" resultMap="MaterialUnitMap">
        SELECT
        TOP 1
        uGUID,
        sUnit,
        sUnitName,
        sNCUnit
        FROM pbUnit WITH(NOLOCK)
        WHERE sNCUnit = #{NCCode}
    </select>

    <resultMap id="MaterialUnitMap" type="BaseData">
        <id column="uGUID" jdbcType="VARCHAR" property="id"/>
        <result column="sUnit" jdbcType="VARCHAR" property="code"/>
        <result column="sUnitName" jdbcType="VARCHAR" property="name" />
        <result column="sNCUnit" jdbcType="VARCHAR" property="NCCode" />
    </resultMap>

    <insert id="insert" parameterType="BaseData">
        INSERT INTO pbUnit
        (sUnit,sUnitName,sNCUnit,sUnitType,sCreator,tCreateTime,bUsable,bIsStandard,bIsSystem)
        VALUES(#{code},#{name},#{NCCode},'QUANTITY','cttsoft',GETDATE(),1,0,0)
    </insert>

</mapper>
